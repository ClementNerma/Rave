{
  "name": "silvernight",
  "author": "Clément Nerma <clement.nerma@gmail.com>",
  "homepage": "https://github.com/ClementNerma/SilverNight",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "description": "SilverNight is a statically-typed, multi-platform programming language with super-flexible syntax",
  "keywords": [
    "SilverNight",
    "Clément Nerma",
    "compiler",
    "language",
    "javascript",
    "java",
    "rust"
  ],
  "bugs": {
    "url": "https://github.com/ClementNerma/SilverNight/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ClementNerma/SilverNight.git"
  },
  "engines": {
    "node": ">=6.12.3"
  },
  "scripts": {
    "test": "node tools/build.js --test",
    "build": "node tools/build.js",
    "clean": "node tools/build.js --clean",
    "build-test": "node tools/build.js --test",
    "build-all": "node tools/build.js --all",
    "build-live": "node tools/build.js --watch --live-reload --all",
    "build-dev-live": "node tools/build.js --watch --live-reload --fast --all --module",
    "read-book": "node tools/build.js --module book --open --book",
    "install-extension": "node tools/build.js --module highlights --install-help --target",
    "available-editors": "node tools/build.js --module highlights --list"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.3.0",
    "chalk": "^2.3.1",
    "clean-css": "^4.1.9",
    "express": "^4.16.2",
    "fs-extra": "^5.0.0",
    "handlebars": "^4.0.11",
    "highlights": "^3.1.1",
    "html-minifier": "^3.5.9",
    "markdown-it": "^8.4.1",
    "minimist": "^1.2.0",
    "opn": "^5.2.0"
  }
