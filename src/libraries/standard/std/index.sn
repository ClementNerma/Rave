/**
 * Void type (primitive)
 */
class void inherits Primitive implements Randomizable, RandomizableWithBounds {
  /** @superdoc */
  public static pln NIL = null;

  /** @superdoc */
  public func %construct () {};
  
  /** @superdoc */
  public func %construct<T ~ Primitive> (prim: T) => #__magic_set_primitive(this, prim);
  
  /** @superdoc */
  public func %to<bool> () : bool => false;
  
  /** @superdoc */
  public func %to<i64> () : i64 => 0l;
  
  /** @superdoc */
  public func %to<u64> () : u64 => 0ul;
  
  /** @superdoc */
  public func %to<f64> () : f64 => 0d;
  
  /** @superdoc */
  public func %to<string> () : string => '';
  
  /** @superdoc */
  public func %serialize () : string => '';
  
  /** @superdoc */
  public static func %unserialize (serialized: string) throws UnserializationError : _self => {
    if serialized != '' {
      throw new UnserializationError("Serialized voids can only be '' (empty string)");
    } else {
      return null;
    }
  };
  
  /** @superdoc */
  public func %equal (another: void) : bool => true;
  
  /** @superdoc */
  public func %greater (another: void) : void => false;
  
  /** @superdoc */
  public func %smaller (another: void) : void => false;
  
  /** @superdoc */
  public static func %call<T ~ Primitive> (prim: T) : void => null;

  /**
   * Generate a random boolean
   * @returns A random boolean
   */
  public static func %random () : void => null;

  /**
   * The lowest void value
   */
  public static pln MINIMUM = null;

  /**
   * The highest void value
   */
  public static pln MAXIMUM = null;

  /**
   * Generate a random void value between two bounds
   * @param low The lower bound
   * @param up The upper bound
   * @returns A random void between the provided bounds
   */
  public static func %random (low: void, up: void) : void => null;
}

// ==================== Booleans ==================== //

/**
 * Boolean type (primitive)
 */
class bool inherits Primitive implements Randomizable, RandomizableWithBounds {
  /** @superdoc(boolean) */
  public static pln NIL = false;

  /** @superdoc(boolean) */
  public func %construct () {};
  
  /** @superdoc(boolean) */
  public func %construct<T ~ Primitive> (prim: T) => #__magic_set_primitive(this, prim);
  
  /** @superdoc(boolean) */
  public func %to<bool> () : bool => this;
  
  /** @superdoc(boolean) */
  public func %to<i64> () : i64 => this ? 1l : 0l;
  
  /** @superdoc(boolean) */
  public func %to<u64> () : u64 => this ? 1ul : 0ul;
  
  /** @superdoc(boolean) */
  public func %to<f64> () : f64 => this ? 1d : 0d;
  
  /** @superdoc(boolean) */
  public func %to<string> () : string => this ? 'true' : 'false';
  
  /** @superdoc(boolean) */
  public func %serialize () : string => this ? 'true' : 'false';
  
  /** @superdoc(boolean) */
  public static func %unserialize (serialized: string) throws UnserializationError : bool {
    if serialized == 'true' {
      return true;
    } elsif serialized == 'false' {
      return false;
    } else {
      throw new UnserializationError("Serialized boolean can be either 'true' or 'false'");
    }
  }
  
  /** @superdoc(boolean) */
  public func %equal (another: bool) : bool => this == another;
  
  /** @superdoc(boolean) */
  public func %greater (another: bool) : bool => (this == true && another == false);
  
  /** @superdoc(boolean) */
  public func %smaller (another: bool) : bool => (this == false && another == true);
  
  /** @superdoc(boolean) */
  public static func %call<T ~ Primitive> (prim: T) : bool => prim != T.NIL;

  /**
   * Generate a random boolean
   * @returns A random boolean
   */
  public static func %random () : bool => #__magic_random_primitive(bool);

  /**
   * The lowest boolean value
   */
  public static pln MINIMUM = false;

  /**
   * The highest boolean value
   */
  public static pln MAXIMUM = true;

  /**
   * Generate a random boolean value between two bounds
   * @param low The lower bound
   * @param up The upper bound
   * @returns A random boolean between the provided bounds
   */
  public static func %random (low: bool, up: bool) : bool {
    if (low == true && up == false) ||
       (low == false && up == true) {
      return #__magic_random_primitive(bool);
    } else {
      // low == up
      return low;
    }
  }
}

// ==================== Numbers ==================== //

/**
 * Virtual number type (primitive)
 * NOTE: This class is not inheritable outside of this file
 */
virtual class number inherits Primitive implements Randomizable, RandomizableWithBounds {
  /** @superdoc */
  final public func %construct () {};
  
  /** @superdoc */
  final public func %construct<T ~ Primitive> (prim: T) => #__magic_set_primitive(self, prim);
  
  /** @superdoc */
  final public func %to<bool> () : bool => self != <self> 0;
  
  /** @superdoc */
  final public func %to<i64> () : i64 => #__magic_cast(i64, self);
  
  /** @superdoc */
  final public func %to<u64> () : u64 => #__magic_cast(u64, self);
  
  /** @superdoc */
  final public func %to<f64> () : f64  => #__magic_cast(f64, self);
  
  /** @superdoc */
  final public func %to<string> () : string => #__magic_cast(string, self);
  
  /** @superdoc */
  final public func %serialize () : string => #__magic_cast(string, self);
  
  /** @superdoc */
  final public static func %unserialize (serialized: string) throws UnserializationError : _self {
    #__magic_unserialize(_self, serialized);
  }
  
  /** @superdoc */
  final public func %equal (another: _self) : bool => self == another;
  
  /** @superdoc */
  final public func %greater (another: _self) : _self => self > another;
  
  /** @superdoc */
  final public func %smaller (another: _self) : _self => self < another;
  
  /** @superdoc */
  final public static func %call<T ~ Primitive> (prim: T) : _self => #__magic_cast(_self, prim);

  /** @superdoc */
  final public static func %random () : _self => #__magic_random_primitive(_self);

  /** @superdoc */
  public static pln MINIMUM: _self;

  /** @superdoc */
  public static pln MAXIMUM: _self;

  /** @superdoc */
  final public static func %random (low: _self, up: _self) : _self => #__magic_random_primitive(_self);

  /**
   * Is this number type signed?
   */
  abstract public static pln SIGNED: bool;
  
  /**
   * Does this number type handle floating-point numbers?
   */
  abstract public static pln HANDLE_FLOATS: bool;

  /**
   * On how many bits this number type fits?
   */
  abstract public static pln SIZE: usize;

  /**
   * Generate a random @class
   * @returns A random @class
   */
  abstract public static func %random () : _self;

  /**
   * The lowest @class value
   */
  abstract public static pln MINIMUM: _self;

  /**
   * The highest @class value
   */
  abstract public static pln MAXIMUM: _self;

  /**
   * Generate a random @class value between two bounds
   * @param low The lower bound
   * @param up The upper bound
   * @returns A random @class between the provided bounds
   */
  abstract public static func %random (low: _self, up: _self) : _self;
}

